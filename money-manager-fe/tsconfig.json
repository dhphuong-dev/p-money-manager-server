{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["*.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["vite-plugin-vue-layouts/client"],
    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["./src/api/*"],
      "@styles/*": ["./src/styles/*"],
      "@pages/*": ["./src/pages/*"],
      "@stores/*": ["./src/stores/*"],
      "@axios": ["./src/api/axios.ts"],
      "@enums/*": ["./src/enums/*"],
      "@plugins": ["./src/plugins"],
      "@directives/*": ["./src/directives/*"],
    },
    "ignoreDeprecations": "5.0",
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
